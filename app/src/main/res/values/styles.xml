<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activityCloseExitAnimation">
            @android:anim/accelerate_decelerate_interpolator
        </item>
    </style>

    <!-- typography -->
    <style name="h1">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:spacing">-1.5dp</item>
    </style>

    <style name="h2">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:spacing">-0.5dp</item>
    </style>

    <style name="h3">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0dp</item>
    </style>

    <style name="h4">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0.25dp</item>
    </style>

    <style name="h5">
        <item name="android:textSize">@dimen/h5</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0dp</item>
    </style>

    <style name="h6">
        <item name="android:textSize">@dimen/h6</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="subtitle1">
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0.15dp</item>
    </style>

    <style name="subtitle2">
        <item name="android:textSize">@dimen/subtitle2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:spacing">0.1dp</item>
    </style>

    <style name="body1">
        <item name="android:textSize">@dimen/body1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0.5dp</item>
    </style>

    <style name="body2">
        <item name="android:textSize">@dimen/body2</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0.25dp</item>
    </style>

    <style name="button">
        <item name="android:textSize">@dimen/button</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:spacing">1.25dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="caption">
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">0.4dp</item>
    </style>

    <style name="overline">
        <item name="android:textSize">@dimen/overline</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:spacing">1.5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
